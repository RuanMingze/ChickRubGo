{
  "manifest_version": 3,
  "name": "ChickRubGo搜索引擎",
  "version": "1.0.1",
  "description": "将新标签页替换为ChickRubGo智能搜索引擎",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_icon": "favicon.png",
    "default_title": "ChickRubGo设置"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "management",
    "cookies"
  ],
  "host_permissions": [
    "https://ruanmingze.github.io/*",
    "https://chickrubgo.kesug.com/*"
  ]
}